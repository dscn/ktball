<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:id="@+id/view_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f7f7f7"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_class"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="第一课"
                            android:textColor="@color/text_black"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_timeid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="40分钟"
                            android:textColor="@color/text_black"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_qiangdu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="中等强度"
                            android:textColor="@color/text_black"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="dasdasdasdasdas"
                        android:textColor="@color/text_black"
                        android:textSize="15dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="已下载"
                    android:textColor="@color/text_grey"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/linear_download"
                    android:layout_width="52dp"
                    android:layout_height="52dp">

                    <com.newer.kt.Refactor.view.CircleProgressView
                        android:id="@+id/progress"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        app:CircleprogressColor="@color/text_black"
                        app:CircleprogressnomalColor="@color/text_grey"
                        app:nomalWhith="5"
                        app:progressWhith="5" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:src="@mipmap/download" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

</LinearLayout>


