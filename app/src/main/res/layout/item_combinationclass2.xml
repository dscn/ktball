<?xml version="1.0" encoding="utf-8"?>
<com.newer.kt.Refactor.view.CustomViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewPager"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:overScrollMode="never">

    <RelativeLayout
        android:id="@+id/primaryContentCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/toolbar_bg_color_3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/item_combinationclass_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/item_combinationclass_time"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_time"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/item_combinationclass_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_down" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_combinationclass_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/item_combinationclass_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_combinationclass_name"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@+id/item_combinationclass_ll"
                android:textColor="@color/white" />
        </RelativeLayout>

        <View
            style="@style/line"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondaryContentFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/red"
            android:text="删除"
            android:textColor="@color/white" />

        <View
            style="@style/line"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />

    </RelativeLayout>
</com.newer.kt.Refactor.view.CustomViewPager>