<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/judge_background"
    tools:context=".Refactor.ui.Avtivity.VideoActivity">

    <include layout="@layout/layout_title"
        android:id="@+id/layout_title_include"/>

    <TextView
        android:id="@+id/layout_select_class_next"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/gold"
        android:gravity="center"
        android:text="下一步" />

    <ExpandableListView
        android:layout_below="@+id/layout_title_include"
        android:id="@+id/layout_select_class_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_select_class_next" />


</RelativeLayout>
