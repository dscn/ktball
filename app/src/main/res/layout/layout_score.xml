<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_score_list_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:background="#373839"
            android:gravity="center"
            android:text="1V1"/>

        <TextView
            android:id="@+id/layout_score_list_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18sp"
            android:background="#373839"
            android:layout_marginTop="2dp"
            android:text="2V2"/>

        <TextView
            android:id="@+id/layout_score_list_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_weight="1"
            android:background="#373839"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="3V3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_score_model_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rankinglist_yes"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/rankinglist_list_title_h"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="名次"
                android:textColor="#feee35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/rankinglist_list_title_h"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="姓名"
                android:textColor="#feee35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/rankinglist_list_title_h"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="年龄"
                android:textColor="#feee35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/rankinglist_list_title_h"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="性别"
                android:textColor="#feee35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/rankinglist_list_title_h"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="年级"
                android:textColor="#feee35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/rankinglist_list_title_h"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="班级"
                android:textColor="#feee35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/rankinglist_list_title_h"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="积分"
                android:textColor="#feee35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/rankinglist_list_title_h"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="胜率"
                android:textColor="#feee35" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_score_model_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/bg_rankinglist_yes"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/rankinglist_list_title_h"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="名次"
                android:textColor="#feee35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/rankinglist_list_title_h"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="战队"
                android:textColor="#feee35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/rankinglist_list_title_h"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="积分"
                android:textColor="#feee35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/rankinglist_list_title_h"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="胜率"
                android:textColor="#feee35" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/layout_score_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>



</LinearLayout>