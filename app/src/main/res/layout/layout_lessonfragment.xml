<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_select_class_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#464646"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/layout_lessonfragment_footballclass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/start_class_button"
                android:gravity="center"
                android:padding="10dp"
                android:text="足球课"
                android:textColor="@drawable/start_class_text_color" />

            <TextView
                android:id="@+id/layout_lessonfragment_bigclass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/start_class_button"
                android:gravity="center"
                android:padding="10dp"
                android:text="足球大课间"
                android:textColor="@drawable/start_class_text_color" />

            <TextView
                android:id="@+id/layout_lessonfragment_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/start_class_button"
                android:gravity="center"
                android:padding="10dp"
                android:text="学生测评"
                android:textColor="@drawable/start_class_text_color" />


        </LinearLayout>

        <TextView
            android:id="@+id/layout_lessonfragment_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/start_class_yes"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#111111"
            android:padding="10dp"
            android:text="开始上课" />
    </LinearLayout>

    <ExpandableListView
        android:layout_marginTop="10dp"
        android:id="@+id/layout_select_class_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_select_class_bottom"
        android:layout_weight="1" />

</RelativeLayout>